{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "author": {
      "type": "string"
    },
    "version": {
      "type": "string"
    },
    "pack-format": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "index": {
      "type": "object",
      "properties": {
        "file": {
          "type": "string"
        },
        "hash-format": {
          "type": "string"
        },
        "hash": {
          "type": "string"
        }
      },
      "required": [
        "file",
        "hash-format",
        "hash"
      ]
    },
    "versions": {
      "type": "object",
      "properties": {
        "minecraft": {
          "type": "string"
        },
        "neoforge": {
          "type": "string"
        },
        "forge": {
          "type": "string"
        },
        "fabric": {
          "type": "string"
        },
        "liteloader": {
          "type": "string"
        },
        "quilt": {
          "type": "string"
        }
      },
      "required": [
        "minecraft"
      ]
    }
  },
  "required": [
    "name",
    "pack-format",
    "index",
    "versions"
  ]
}
